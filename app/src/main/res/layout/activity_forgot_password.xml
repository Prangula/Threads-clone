<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ForgotPasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_forgot"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:title=" "
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="დაგავიწყდა პაროლი?"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text"
            />


    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgoot"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        app:boxBackgroundColor="@color/background"
        app:boxStrokeColor="@color/background"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/white"
        app:cursorColor="@color/white"
        android:layout_marginTop="@dimen/margin_top_big"
        >

        <EditText
            android:id="@+id/forgot_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:textColor="@color/white"
            android:hint="მეილი"
            android:textColorHint="@color/white"
            android:inputType="textCapWords"
            />


    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/forgoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="შეიყვანეთ თქვენი მეილი, რათა შეძლოთ პაროლის აღდგენა"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_big"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_forgot"
        android:textSize="@dimen/small_text"
        android:textColor="@color/background"
        />


    <android.widget.Button
        android:id="@+id/forgot_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/forgot_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:background="@drawable/button"
        android:layout_marginBottom="@dimen/margin_top_big"
        android:layout_marginTop="@dimen/margin_top_big"
        android:text="პაროლის აღდგენა"
        android:textSize="@dimen/small_text"
        android:textColor="@color/white"

        />


</androidx.constraintlayout.widget.ConstraintLayout>