<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_start"
        app:civ_border_color="@color/background"
        app:civ_border_width="2dp"
        android:layout_marginTop="@dimen/margin_top_small"
        tools:src="@drawable/untitled_design__75_"
        />

    <TextView
        android:id="@+id/home_name"
        android:layout_width="240dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_profile_image"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginTop="@dimen/margin_top_small"
        tools:text="prangula731"
        android:textStyle="bold"
        android:textSize="@dimen/small_text"
        android:textColor="@color/background"
        />

    <TextView
        android:id="@+id/home_date"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginTop="@dimen/margin_top_small"
        tools:text="12H"
        android:textStyle="bold"
        android:textSize="@dimen/small_text"
        android:textColor="@color/background"
        />

    <TextView
        android:id="@+id/home_editText"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_name"
        android:background="@android:color/transparent"
        android:hint="შექმენი სელფი"
        tools:text="gamarjoba me var luka"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="5dp"
        android:maxLines="10"
        app:layout_constraintStart_toEndOf="@id/home_profile_image"
        android:textSize="@dimen/small_text"
        android:textColor="@color/background"
        android:textColorHint="@color/background"
        />


    <ImageView
        android:id="@+id/home_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/home_editText"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginTop="10dp"
        tools:src="@drawable/ludi"
        />

    <ImageView
        android:id="@+id/home_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_thumb_up_alt_24"
        app:layout_constraintTop_toBottomOf="@id/home_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/home_comment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_chat_bubble_outline_24"
        app:layout_constraintTop_toBottomOf="@id/home_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/home_star"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintTop_toBottomOf="@id/home_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_start"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/home_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_like"
        android:background="@android:color/transparent"
        android:text="0"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/small_text"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/background"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@id/home_like"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>